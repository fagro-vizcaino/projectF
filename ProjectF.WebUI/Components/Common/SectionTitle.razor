<div class="flex mb-4 py-5 bg-white shadow-xs rounded">
    <div class="w-3/4 h-8 px-4 py-2 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
            @Title
        </h3>
        <p class="mt-2 max-w-2xl text-sm leading-5 text-gray-500">
            @Subtitle
        </p>
    </div>
    <div class="w-1/4 px-4 py-5 sm:px-6 md:flex items-center justify-end">
        <span class="sm:ml-3 shadow-sm rounded-md">
            <button type="button" onclick="@OnClickAddButton"  class="inline-flex items-center px-4 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:shadow-outline-indigo focus:border-indigo-700 active:bg-indigo-700 transition duration-150 ease-in-out">
                Crear
            </button>
        </span>
    </div>
</div>
@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Subtitle { get; set; } = string.Empty;

    [Parameter]
    public EventCallback OnClickAddButton { get; set; }


}
