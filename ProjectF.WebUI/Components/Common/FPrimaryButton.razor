<button onclick="OnClickPrimary" type="@ButtonType" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
    @ButtonName
</button>

    @code {
        [Parameter] public string ButtonName { get; set; }
        [Parameter] public string ButtonType { get; set; } = "submit";
        [Parameter] public EventCallback OnClickPrimary { get; set; }

    }
