@inherits Microsoft.AspNetCore.Components.Forms.InputNumber<int>

<input class="@(CssClass == "invalid"
                ? _textInputCss + "border border-red-500"
                : $"{CssClass} {_textInputCss}")"
       @bind="@CurrentValue"
       step="1"
       type="number" />

@code {
    string _textInputCss = "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 text-base outline-none text-gray-700 shadow-xs py-2 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out";
}
