@inherits Microsoft.AspNetCore.Components.Forms.InputText

<textarea class="@(CssClass == "invalid"
                ? _textInputCss + "border border-red-500"
                : $"{CssClass} {_textInputCss}")"
       @bind="@CurrentValue"
       rows="4" />

@code {
    string _textInputCss = "w-full px-3 py-2 text-gray-700 border rounded-lg shadow-sm focus:outline-none leading-tight focus:shadow-outline";
}
