@inherits InputText

<input @attributes="AdditionalAttributes"
       class="@(CssClass == "invalid"
                ? _textInputCss + "border border-red-500"
                : $"{CssClass} {_textInputCss}")"
       @bind="@CurrentValue"
       type="text"/>

@code {
    string _textInputCss = "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 text-base outline-none text-gray-700 shadow-sm py-2 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out";
}
