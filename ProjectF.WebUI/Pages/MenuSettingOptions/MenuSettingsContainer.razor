@page "/settings"
@inherits MenuSettingsContainerHandler

<div class="bg-white mb-10">
    <div class="mb-4">
        <div class="w-3/4 h-12 px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Configuracion
            </h3>
            <p class="mt-1 max-w-2xl text-sm leading-5 text-gray-500">
                Gestiona tu las opciones del sistema.
            </p>
        </div>
    </div>
    <FDivider />
    <div class="px-5 py-5 bg-white mx-10">
        <div class="flex flex-wrap -m-2">
            @foreach (var item in MenuSettingOptions)
            {
                <div class="p-2 lg:w-1/3 md:w-1/2 w-full">
                    <div class="h-full flex items-center border-gray-200 border p-4 rounded-lg">
                        <div class="rounded-full h-10 w-10 flex items-center justify-center bg-indigo-100 text-indigo-500 mr-2">
                            @((MarkupString)item.Icon)
                        </div>
                        <div class="flex-grow">
                            <h2 class="text-gray-900 title-font font-medium">@item.Name</h2>
                            <p class="text-gray-500">@item.Description</p>
                        </div>
                        <button @onclick="() => GoToRoute(item.Route)"
                                class="text-gray-500 flex items-center text-sm focus:outline-none rounded ml-auto py-2 leading-none hover:text-purple-700 justify-end">
                            <svg stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 mr-2 " viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="3" />
                                <path d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 010 2.83 2 2 0 01-2.83 0l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-2 2 2 2 0 01-2-2v-.09A1.65 1.65 0 009 19.4a1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83 0 2 2 0 010-2.83l.06-.06a1.65 1.65 0 00.33-1.82 1.65 1.65 0 00-1.51-1H3a2 2 0 01-2-2 2 2 0 012-2h.09A1.65 1.65 0 004.6 9a1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 010-2.83 2 2 0 012.83 0l.06.06a1.65 1.65 0 001.82.33H9a1.65 1.65 0 001-1.51V3a2 2 0 012-2 2 2 0 012 2v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 0 2 2 0 010 2.83l-.06.06a1.65 1.65 0 00-.33 1.82V9a1.65 1.65 0 001.51 1H21a2 2 0 012 2 2 2 0 01-2 2h-.09a1.65 1.65 0 00-1.51 1z" />
                            </svg>
                            Edit
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

