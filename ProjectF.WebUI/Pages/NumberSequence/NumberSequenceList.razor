
@if (Elements.Length > 0)
{
<Table DataSource="Elements">
    <Column @bind-Field="@context.Name" Title="Nombre" Sortable />
    <Column @bind-Field="@context.DisplaySequence" Title="Sequencia Generada" />
    <Column @bind-Field="@context.InitialSequence" Title="Sequencia Inicial" Style="text-align: right;" />
    <Column @bind-Field="@context.NextSequence" Title="Proxima Sequencia" Style="text-align: right;" />
    <Column @bind-Field="@context.FinalSequence" Title="Sequencia Final" Style="text-align: right;" />
    <Column @bind-Field="@context.IsActive" Title="Es Activo">
        @(context.IsActive ? "Si" : "No")
    </Column>

    <ActionColumn Title="Acción" Style="text-align: right" Width="40">
        <Space>
            <SpaceItem>
                <Button Shape="circle" Icon="edit" OnClick="()=> OnClickDrawerEdit.InvokeAsync(context)" />
            </SpaceItem>
        </Space>
        <Space>
            <SpaceItem>
                <Popconfirm Placement="@PlacementType.Top"
                            Title="@("Estas seguro de borrar este sequencia")"
                            OkText="Sí"
                            CancelText="No"
                            OnConfirm="()=> OnClickDelete.InvokeAsync(context.Id)">
                    <Button Shape="circle" Icon="delete" Danger />
                </Popconfirm>
            </SpaceItem>
        </Space>
    </ActionColumn>
</Table>
}
else
{
    <Empty />
}


@code {
    [Parameter]
    public NumberSequence[] Elements { get; set; }

    [Parameter]
    public EventCallback<NumberSequence> OnClickDrawerEdit { get; set; }

    [Parameter]
    public EventCallback<long> OnClickDelete { get; set; }
}
